    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildC",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${relativeFile}",
                "-o",
                "bin/${fileBasenameNoExtension}"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}